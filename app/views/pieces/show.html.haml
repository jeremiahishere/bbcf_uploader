%p
  %b Name:
  = @piece.name
%p
  %b Composer:
  = @piece.composer
%p
  %b Arranger:
  = @piece.arranger
%p
  %b Inventory number:
  = @piece.inventory_number
%p
  %b Version number:
  = @piece.version_number
%p
  %b Description:
  = @piece.description
%p
  %b Programs with this piece:
  %ul
    - @piece.programs.each do |program|
      - if program.current?
        %li 
          = link_to program.name, program_path(program)
%p
  %b Download parts
  %ul
    - @piece.parts.each do |part|
      %li
        = link_to part.instrument.name, part.part_file.url

= link_to 'Edit', edit_piece_path(@piece)
\|
= link_to 'Back', pieces_path
