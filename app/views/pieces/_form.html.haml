= form_for @piece do |f|
  -if @piece.errors.any?
    #error_explanation
      %h2= "#{pluralize(@piece.errors.count, "error")} prohibited this piece from being saved:"
      %ul
        - @piece.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :composer
    = f.text_field :composer
  .field
    = f.label :arranger
    = f.text_field :arranger
  .field
    = f.label :inventory_number
    = f.text_field :inventory_number
  .field
    = f.label :version_number
    = f.text_field :version_number
  .field
    = f.label :description
    = f.text_area :description
  .field
    Programs: (To edit programs, go to the program manager)
    %br
    %ul
      - @piece.programs.each do |program|
        - if program.current?
          %li
            = link_to program.name, program_path(program)

  .actions
    = f.submit 'Save'
